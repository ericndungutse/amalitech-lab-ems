<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="25" xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/17.0.12"
      fx:controller="org.ndungutse.ems.HelloController"
      style="-fx-background-color: #f9f9f9; -fx-padding: 30;">

    <!-- Welcome Message -->
    <HBox alignment="CENTER_LEFT">
        <Label fx:id="welcomeText"
               text="Welcome to the EMS Dashboard"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
    </HBox>

    <!-- Search Bar -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField"
                   promptText="Search by name..."
                   style="-fx-pref-width: 250;" />
        <Button text="Search"
                onAction="#handleSearchByName"
                style="-fx-background-color: #2980b9; -fx-text-fill: white;" />
        <Button text="Clear"
                onAction="#handleClearSearch"
                style="-fx-background-color: #bdc3c7; -fx-text-fill: black;" />
    </HBox>

    <!-- Employee Table -->
    <HBox alignment="CENTER_LEFT">
        <TableView fx:id="employeeTable"
                   prefWidth="950"
                   prefHeight="450"
                   style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-background-radius: 8;">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="80"/>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                <TableColumn fx:id="departmentColumn" text="Department" prefWidth="120"/>
                <TableColumn fx:id="salaryColumn" text="Salary" prefWidth="100"/>
                <TableColumn fx:id="ratingColumn" text="Rating" prefWidth="90"/>
                <TableColumn fx:id="experienceColumn" text="Experience" prefWidth="120"/>
                <TableColumn fx:id="statusColumn" text="Active" prefWidth="80"/>
            </columns>
        </TableView>
    </HBox>
    <!-- Action Buttons (Below Table) -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Add Employee"
                onAction="#handleNewEmployee"
                style="-fx-background-color: #3498db; -fx-text-fill: white;" />

        <Button text="Delete Selected"
                onAction="#handleDeleteEmployee"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />

<!--        <Button text="Top 5 Highest Paid"-->
<!--                onAction="#handleTop5HighestPaid"-->
<!--                style="-fx-background-color: #8e44ad; -fx-text-fill: white;" />-->

<!--        <Button text="Avg Salary by Dept"-->
<!--                onAction="#handleAverageSalaryByDepartment"-->
<!--                style="-fx-background-color: #27ae60; -fx-text-fill: white;" />-->
    </HBox>
</VBox>
